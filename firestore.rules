rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isAuthenticated() && request.auth.uid == uid;
    }

    function hasRole(role) {
      return isAuthenticated() && request.auth.token.role == role;
    }

    function isAdmin() {
      return hasRole('admin');
    }

    function isStudent() {
      return hasRole('student');
    }

    function isAlumni() {
      return hasRole('alumni');
    }

    // --- Collection Rules ---

    // Users: Publicly readable for authenticated users (directory), but write restricted.
    match /users/{uid} {
      allow read: if isAuthenticated();
      allow write: if false; // Managed by Cloud Functions
    }

    // Profiles: readable if public or authenticated.
    match /profiles/{uid} {
      allow read: if isAuthenticated();
      // Allow user to update their own bio/skills, but not critical fields like userId or createdAt
      allow update: if isOwner(uid) 
                    && request.resource.data.userId == uid
                    && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['bio', 'skills', 'displayName', 'visibility', 'year']);
      allow create: if false; // Created by Functions
    }

    // Alumni Meta: PRIVATE. Only owner and admin.
    match /alumniMeta/{uid} {
      allow read: if isOwner(uid) || isAdmin();
      allow write: if false; // Managed by Functions
    }

    // Guidance Requests:
    // - Students can create (owner)
    // - Assigned Alumni can read/update status
    // - Admins can read all
    match /guidanceRequests/{requestId} {
      allow read: if isOwner(resource.data.studentId) 
                  || (isAuthenticated() && resource.data.assignedAlumniId == request.auth.uid)
                  || isAdmin();
      
      allow write: if false; // Enforce Cloud Functions
    }

    // Posts (Community):
    // - Active students/alumni can read.
    // - Authors can create.
    match /posts/{postId} {
      allow read: if isAuthenticated();
      allow write: if false; // Enforce Cloud Functions
    }

    // Audit Logs: Read-only for admins. NO WRITE from client.
    match /adminAuditLogs/{logId} {
      allow read: if isAdmin();
      allow write: if false; // ONLY Cloud Functions
    }
  }
}
